{
  "name": "hands-on-plugin-system-for-back",
  "version": "1.0.0",
  "description": "Researching plugin system on backend with hot reload support",
  "author": "Damir Manapov",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/main.ts",
    "start": "node dist/main.js",
    "start:dev": "tsx src/main.ts",
    "test": "vitest run",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:watch": "vitest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit && tsc --noEmit --project tsconfig.test.json",
    "compose:up": "docker compose -f compose/docker-compose.yml up -d && docker compose -f compose/docker-compose.yml up starter",
    "compose:down": "docker compose -f compose/docker-compose.yml down",
    "compose:restart": "docker compose -f compose/docker-compose.yml restart",
    "compose:reset": "docker compose -f compose/docker-compose.yml down -v --remove-orphans"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@nestjs/testing": "^11.1.9",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.11.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.47.0",
    "vitest": "^4.0.12"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.658.1",
    "@aws-sdk/s3-request-presigner": "^3.658.1",
    "@nestjs/common": "^11.1.9",
    "@nestjs/core": "^11.1.9",
    "@nestjs/platform-express": "^11.1.9",
    "kafkajs": "^2.2.4",
    "kysely": "^0.28.8",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  }
}
